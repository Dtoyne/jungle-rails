<section class="cart-show">

  <header class="page-header">
    <h1 align="center">My Cart</h1>
  </header>

  <% if cart.count == 0 %>
    <h2 align="center">Cart Empty</h2>
    <br><h4 align="center">Add Some Products</h4>
    <br><p align ="center"><%= link_to 'Products', [:products], class: 'btn btn-info' %>
</a></p>
  <% else %>

    <div class="panel panel-default items">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th colspan="2">Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_total = 0 %>
          <% cart.each do |product_id, details| %>
            <%= render 'item', product_id: product_id, details: details %>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="4">
              Total:
            </th>
            <th>
              <%= @cart_total %>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <%= form_tag orders_path do %>
          <script
            src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-amount="<%= @cart_total * 100 %>"
            data-name="Jungle"
            data-description="Dylan Toyne's Order"
            data-locale="auto"
            data-email="dyantoyne@gmail.com"
            data-currency="cad">
          </script>
        <% end %>
      </div>
    </div>

  <% end %>

</section>
