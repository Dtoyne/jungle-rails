<section class="cart-show">

  <header class="page-header">
    <h1>My Cart</h1>
  </header>

  <% if cart.count == 0 %>
    <h2>Cart Empty</h2>
    <p>Continue Shopping</p>
    <p><%= link_to 'Products', [:products], class: 'btn btn-info' %></p>
  <% else %>
    <%= render 'cart' %>
  <% end %>

</section>
